<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if flash[:notice] %>
      <p id="notice" class="text-center"><%= notice %></p>
    <% end %>
    <% if current_user %>
      <p class="display text-center">
        <%= logged_in_user %>
        <%= link_to current_user_name, user_path(current_user_id)%>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to "Sign Out", sign_out_path, method: :delete, class: "btn" %>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to "New Event", new_event_path %>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to "Events", events_path %>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to "Add Attended Events", events_attended_path %>
      </p>
    <% else %>
      <p>
        <%= link_to "Sign In", sign_in_path, class: "btn" %>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to "Sign Up", sign_up_path %>
      </p>
      <br/>
    <% end %>
    <br/>
    <%= yield %>
  </body>
</html>
