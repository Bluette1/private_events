<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if flash[:notice] %>
  <p id="notice" class="text-center"><%= notice %></p>
  <% end %>
  <% if current_user %>
  <p class="display text-center">
  <%= logged_in_user %>
  <%= link_to current_user_name, user_path(current_user_id)%>
  </p>
 <br/>
  <% end %>
    <%= yield %>
    <br/>
  <% if current_user %>
  <p>
    <%= link_to "Sign Out", sign_out_path, method: :delete, class: "btn" %> 
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= link_to "New Event", new_event_path %> 
  </p>
  <% end %>
  </body>
</html>
